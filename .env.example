# 服务器配置
PORT=8080
MODE=debug  # debug或release
JWT_SECRET=your-secret-key
MAX_CONNECTIONS=10000

# Redis配置（仅用于缓存）
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=50  # 默认为CPU核心数*10

# Kafka配置（用于消息队列）
KAFKA_BOOTSTRAP_SERVERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_CONSUMER_GROUP=chatroom-group
KAFKA_TOPIC_PREFIX=chatroom-
KAFKA_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=2

# 数据库配置
DB_CONNECTION_STRING=root:password@tcp(127.0.0.1:3306)/chatroom?charset=utf8mb4&parseTime=True&loc=Local
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100

# 缓存配置
CACHE_EXPIRATION=300  # 秒

# 消息队列配置
CHANNEL_BUFFER_SIZE=1000
